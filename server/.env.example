NODE_ENV=development
PORT=4000
# Use local DB for dev. If not available, you can enable DEV_BYPASS_AUTH to work offline.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agroservicios
JWT_SECRET=please-change-me-to-a-very-long-random-string-32chars-min
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Development helpers
# If true, login will accept DEV_USER/DEV_PASS without touching DB.
DEV_BYPASS_AUTH=false
DEV_USER=admin
DEV_PASS=admin

# Environment variables for production deployment

# Node.js Environment
NODE_ENV=production
PORT=4000

# JWT Secret (Generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# Database Configuration
# For Render PostgreSQL database
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# CORS Configuration
# Para desarrollo local: múltiples orígenes separados por comas
# CORS_ORIGIN=http://localhost:3000,http://localhost:5173
# Para producción: un solo origen
CORS_ORIGIN=https://sistemagestionagricola-frontend.onrender.com

# Optional: Additional security configurations
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h

# Prisma Configuration
# Disable Prisma telemetry in production
PRISMA_HIDE_UPDATE_MESSAGE=true
CHECKPOINT_DISABLE=1
